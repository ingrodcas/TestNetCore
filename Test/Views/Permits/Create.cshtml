                <span asp-validation-for="PermissionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermitDate" class="control-label"></label>
                <input asp-for="PermitDate" class="form-control" />
                <span asp-validation-for="PermitDate" class="text-danger"></span>
            </div>
